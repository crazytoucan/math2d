{
  "extends": ["tslint:latest", "tslint-microsoft-contrib", "tslint-config-prettier"],
  "rules": {
    "array-type": false,
    "arrow-parens": false,
    "binary-expression-operand-order": false,
    "completed-docs": false,
    "cyclomatic-complexity": false,
    "export-name": false,
    "function-name": false,
    "insecure-random": false,
    "interface-name": false,
    "match-default-export-name": false,
    "max-classes-per-file": false,
    "max-func-body-length": false,
    "member-ordering": false,
    "missing-jsdoc": false,
    "newline-before-return": false,
    "no-any": false,
    "no-complex-conditionals": false,
    "no-console": true,
    "no-constant-condition": false,
    "no-empty-interface": false,
    "no-for-in-array": false,
    "no-for-in": false,
    "no-function-expression": false,
    "no-http-string": false,
    "no-implicit-dependencies": [true, "dev"],
    "no-increment-decrement": false,
    "no-multiline-string": false,
    "no-non-null-assertion": false,
    "no-object-literal-type-assertion": false,
    "no-parameter-properties": false,
    "no-parameter-reassignment": false,
    "no-redundant-jsdoc": false,
    "no-relative-imports": false,
    "no-reserved-keywords": false,
    "no-single-line-block-comment": false,
    "no-submodule-imports": true,
    "no-suspicious-comment": [true, "https://github.com/crazytoucan/geometry/issues/*"],
    "no-typeof-undefined": false,
    "no-unnecessary-callback-wrapper": false,
    "no-unnecessary-class": false,
    "no-unnecessary-field-initialization": false,
    "no-unnecessary-local-variable": false,
    "no-unnecessary-qualifier": false,
    "no-unnecessary-type-assertion": false,
    "no-unsafe-any": false,
    "no-use-before-declare": false,
    "no-void-expression": false,
    "object-literal-sort-keys": false,
    "possible-timing-attack": false,
    "prefer-array-literal": false,
    "prefer-conditional-expression": false,
    "prefer-method-signature": false,
    "prefer-object-spread": false,
    "prefer-template": false,
    "prefer-type-cast": false,
    "restrict-plus-operands": false,
    "strict-boolean-expressions": false,
    "switch-default": false,
    "switch-final-break": false,
    "trailing-comma": true,
    "triple-equals": [true, "allow-null-check", "allow-undefined-check"],
    "typedef": false,
    "use-default-type-parameter": false,
    "variable-name": false
  }
}
