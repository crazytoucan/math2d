{
  "compilerOptions": {
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "lib": [
      "es2015"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "plugins": [{ "name": "typescript-tslint-plugin" }],
    "pretty": true,
    "removeComments": false,
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "stripInternal": true,
    "noFallthroughCasesInSwitch": true,
    "target": "ES5"
  },
  "exclude": [
    "benchmarks",
    "esm",
    "lib",
    "node_modules"
  ]
}
